@model TechShop.Models.Category

<h1>Додати категорію</h1>

<form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Створити" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-secondary">
        Повернутися до списку
    </a>
</div>