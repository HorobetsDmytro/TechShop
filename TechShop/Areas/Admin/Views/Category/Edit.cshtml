@model TechShop.Models.Category

<h1>Редагувати категорію</h1>

<form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3"> <input type="submit" value="Зберегти" class="btn btn-primary" />
    </div>
</form>

<div>
    <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-secondary mt-3">
        Повернутися до списку
    </a>
</div>