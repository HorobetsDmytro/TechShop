@model TechShop.Models.Product

<h1>Видалити товар</h1>

<div class="alert alert-danger">
    <h3>Ви впевнені, що хочете видалити товар?</h3>
</div>

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <dl class="row">
                    <dt class="col-sm-3">Ціна:</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-3">Кількість на складі:</dt>
                    <dd class="col-sm-9">@Model.StockQuantity</dd>

                    <dt class="col-sm-3">Категорія:</dt>
                    <dd class="col-sm-9">@(((List<TechShop.Models.Category>)ViewBag.Categories)?.FirstOrDefault(c => c.Id == Model.CategoryId)?.Name)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</form>