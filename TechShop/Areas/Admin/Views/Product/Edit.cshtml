@model TechShop.Models.Product

<h1>Редагувати Товар</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="control-label">Опис</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label">Ціна</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StockQuantity" class="control-label">Кількість на складі</label>
        <input asp-for="StockQuantity" class="form-control" type="number" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageUrl" class="control-label">URL зображення</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="control-label">Категорія</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" id="categorySelect"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Color" class="control-label">Колір</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Width" class="control-label">Ширина (см)</label>
        <input asp-for="Width" class="form-control" type="number" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Height" class="control-label">Висота (см)</label>
        <input asp-for="Height" class="form-control" type="number" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Density" class="control-label">Мікрони</label>
        <input asp-for="Density" class="form-control" type="number" />
        <span asp-validation-for="Density" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PiecesPerPackage" class="control-label">Кількість штук в упаковці</label>
        <input asp-for="PiecesPerPackage" class="form-control" type="number" />
        <span asp-validation-for="PiecesPerPackage" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" id="volumeGroup">
        <label asp-for="Volume" class="control-label">Об'єм (л)</label>
        <input asp-for="Volume" class="form-control" type="number" />
        <span asp-validation-for="Volume" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductionTimeDays" class="control-label">Час виготовлення (днів)</label>
        <input asp-for="ProductionTimeDays" class="form-control" type="number" min="1" max="365" />
        <small class="form-text text-muted">Вкажіть скільки днів потрібно для виготовлення товару, якщо його немає на складі</small>
        <span asp-validation-for="ProductionTimeDays" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-primary"/>
        <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $(document).ready(function () {
        function updateVolumeVisibility() {
            var selectedOption = $('#categorySelect option:selected').text();
            if (selectedOption === "Пакети для сміття") {
                $('#volumeGroup').show();
                $('#Volume').attr('required', 'required');
            } else {
                $('#volumeGroup').hide();
                $('#Volume').removeAttr('required');
                $('#Volume').val('');
            }
        }

        $('#categorySelect').change(updateVolumeVisibility);
        updateVolumeVisibility();
    });
</script>