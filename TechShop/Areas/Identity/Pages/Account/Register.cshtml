@page
@model TechShop.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Створити новий акаунт.</h2>
            <hr />  
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="Ім'я" />
                <label for="Input_FirstName">Ім'я</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Прізвище" />
                <label for="Input_LastName">Прізвище</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Електронна пошта" />
                <label for="Input_Email">Електронна пошта</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control phone-mask" placeholder="+38 000 000 00 00" />
                <label for="Input_PhoneNumber">Номер телефону</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Пароль" />
                <label for="Input_Password">Пароль</label>
                <button type="button" class="btn btn-outline-secondary toggle-password position-absolute end-0 top-50 translate-middle-y me-2">
                    <i class="fas fa-eye"></i>
                </button>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Підтвердити пароль" />
                <label for="Input_ConfirmPassword">Підтвердити пароль</label>
                <button type="button" class="btn btn-outline-secondary toggle-password position-absolute end-0 top-50 translate-middle-y me-2">
                    <i class="fas fa-eye"></i>
                </button>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Реєстрація</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.phone-mask').mask('+38 000 000 00 00');

            $('.toggle-password').click(function () {
                const input = $(this).closest('.form-floating').find('input');
                const icon = $(this).find('i');

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>
}