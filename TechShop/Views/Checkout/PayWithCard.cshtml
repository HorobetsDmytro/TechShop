@{
    ViewData["Title"] = "Оплата картою";
    var order = ViewBag.Order as Order;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Оплата замовлення №@order?.Id</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <h5>Сума до оплати: @order?.TotalWithDelivery.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</h5>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-muted">Зараз ви будете перенаправлені на безпечну сторінку оплати LiqPay</p>
                    </div>

                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Завантаження...</span>
                    </div>
                    
                    <p class="mt-3">Підготовка до оплати...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Raw(ViewBag.PaymentForm)