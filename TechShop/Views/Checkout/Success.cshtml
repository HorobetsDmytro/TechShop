@model Order
@{
    ViewData["Title"] = "Замовлення успішно оформлене";
    
    int maxProductionDays = 0;
    bool hasOutOfStockItems = false;
    
    foreach (var item in Model.OrderItems)
    {
        if (item.Product != null)
        {
            if (item.Product.StockQuantity <= 0)
            {
                hasOutOfStockItems = true;
            }
        }
    }
    
    int deliveryDays = 0;
    string deliveryText = "";
    
    if (Model.Delivery != null)
    {
        switch (Model.Delivery.Method)
        {
            case DeliveryMethod.SelfPickup:
                deliveryDays = 0;
                deliveryText = "Самовивіз - готово до отримання";
                break;
            case DeliveryMethod.NovaPoshta:
                deliveryDays = 2;
                deliveryText = "Нова Пошта - 1-2 робочі дні";
                break;
            case DeliveryMethod.Courier:
                deliveryDays = 1;
                deliveryText = "Кур'єрська доставка - 1 робочий день";
                break;
        }
    }
    
    int totalDays = maxProductionDays + deliveryDays;
    
    string totalTimeText = "";
    if (hasOutOfStockItems)
    {
        totalTimeText = $"Загальний час: {totalDays} {(totalDays == 1 ? "день" : totalDays < 5 ? "дні" : "днів")} (виготовлення + доставка)";
    }
    else
    {
        totalTimeText = deliveryDays > 0 ? 
            $"Загальний час: {deliveryDays} {(deliveryDays == 1 ? "день" : deliveryDays < 5 ? "дні" : "днів")} (тільки доставка)" :
            "Готово до самовивозу протягом 1-2 робочих днів";
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="success-title"><i class="fas fa-check-circle me-2"></i>Замовлення успішно оформлене!</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="alert alert-success">
                            <h5 class="mb-3">Дякуємо за ваше замовлення!</h5>
                            <p class="mb-0">Номер замовлення: <strong>#@Model.Id</strong></p>
                            <p class="mb-0">Дата замовлення: <strong>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</strong></p>
                        </div>
                    </div>

                    <div class="alert alert-primary mb-4">
                        <h6><i class="fas fa-clock me-2"></i>Терміни виконання замовлення:</h6>
                        
                        @if (hasOutOfStockItems)
                        {
                            <div class="mb-2">
                                <i class="fas fa-cog me-2 text-warning"></i>
                                <strong>Виготовлення:</strong> @maxProductionDays @(maxProductionDays == 1 ? "день" : maxProductionDays < 5 ? "дні" : "днів")
                                <small class="text-muted">(деякі товари відсутні на складі)</small>
                            </div>
                        }
                        
                        <div class="mb-2">
                            <i class="fas fa-truck me-2 text-info"></i>
                            <strong>Доставка:</strong> @deliveryText
                        </div>
                        
                        <hr class="my-2">
                        <div class="fw-bold text-primary">
                            <i class="fas fa-calendar-alt me-2"></i>@totalTimeText
                        </div>
                        
                        @if (hasOutOfStockItems)
                        {
                            <small class="text-muted d-block mt-2">
                                * Час виготовлення може варіюватися в залежності від завантаженості виробництва
                            </small>
                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Деталі замовлення:</h6>
                            <ul class="list-unstyled">
                                @foreach (var item in Model.OrderItems)
                                {
                                    <li class="d-flex justify-content-between py-2 border-bottom">
                                        <div>
                                            <span class="fw-medium">@item.Product?.Name</span>
                                            <small class="text-muted d-block">Кількість: @item.Quantity шт.</small>
                                            @if (item.Product != null && item.Product.StockQuantity <= 0)
                                            {
                                                <small class="text-warning">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    Товар відсутній на складі
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-success">
                                                    <i class="fas fa-check me-1"></i>В наявності
                                                </small>
                                            }
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">@((item.Price * item.Quantity).ToString("C", new System.Globalization.CultureInfo("uk-UA")))</div>
                                            <small class="text-muted">@item.Price.ToString("C", new System.Globalization.CultureInfo("uk-UA")) за шт.</small>
                                        </div>
                                    </li>
                                }
                            </ul>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <strong>Загальна сума:</strong>
                                <strong class="text-success">@Model.TotalWithDelivery.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</strong>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <h6>Доставка:</h6>
                            @if (Model.Delivery != null)
                            {
                                <p><strong>Спосіб:</strong> 
                                    @(Model.Delivery.Method switch 
                                    {
                                        DeliveryMethod.SelfPickup => "Самовивіз",
                                        DeliveryMethod.NovaPoshta => "Нова Пошта",
                                        DeliveryMethod.Courier => "Кур'єрська доставка",
                                        _ => "Не вказано"
                                    })
                                </p>
                                @if (Model.Delivery.Method != DeliveryMethod.SelfPickup)
                                {
                                    <p><strong>Отримувач:</strong> @Model.Delivery.RecipientName</p>
                                    <p><strong>Телефон:</strong> @Model.Delivery.RecipientPhone</p>
                                    @if (!string.IsNullOrEmpty(Model.Delivery.City))
                                    {
                                        <p><strong>Місто:</strong> @Model.Delivery.City</p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Delivery.Address))
                                    {
                                        <p><strong>Адреса:</strong> @Model.Delivery.Address</p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Delivery.NovaPoshtaBranch))
                                    {
                                        <p><strong>Відділення НП:</strong> @Model.Delivery.NovaPoshtaBranch</p>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-info p-2 mt-2">
                                        <small>
                                            <i class="fas fa-info-circle me-1"></i>
                                            Після готовності замовлення ми зв'яжемося з вами для узгодження часу самовивозу
                                        </small>
                                    </div>
                                }
                            }

                            <h6 class="mt-3">Оплата:</h6>
                            @if (Model.Payment != null)
                            {
                                <p><strong>Спосіб:</strong> 
                                    @(Model.Payment.PaymentMethod == PaymentMethod.Cash ? "Готівка при отриманні" : "Картка онлайн")
                                </p>
                                @if (Model.Payment.PaymentMethod == PaymentMethod.Cash)
                                {
                                    <small class="text-muted">
                                        <i class="fas fa-money-bill-wave me-1"></i>
                                        Оплата здійснюється при отриманні замовлення
                                    </small>
                                }
                                else
                                {
                                    <small class="text-success">
                                        <i class="fas fa-credit-card me-1"></i>
                                        Оплату успішно проведено онлайн
                                    </small>
                                }
                            }
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <div class="alert alert-info">
                            <h6><i class="fas fa-list-check me-2"></i>Що далі?</h6>
                            <div class="row text-start">
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <i class="fas fa-phone text-primary me-2"></i>
                                        Ми зв'яжемося з вами найближчим часом для підтвердження замовлення
                                    </p>
                                    @if (hasOutOfStockItems)
                                    {
                                        <p class="mb-2">
                                            <i class="fas fa-hammer text-warning me-2"></i>
                                            Розпочнемо виготовлення відсутніх товарів
                                        </p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <i class="fas fa-box text-info me-2"></i>
                                        Підготуємо замовлення до відправки/самовивозу
                                    </p>
                                    <p class="mb-0">
                                        <i class="fas fa-bell text-success me-2"></i>
                                        Повідомимо про готовність замовлення
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <a href="@Url.Action("Main", "Home")" class="btn btn-primary me-2">
                                <i class="fas fa-home me-1"></i>На головну
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-shopping-bag me-1"></i>Продовжити покупки
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .success-title {
        color: #FFEEB3;
        font-size: 2.2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        padding: 10px 0;
    }
</style>