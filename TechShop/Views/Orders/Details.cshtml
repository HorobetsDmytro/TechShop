@model TechShop.Models.Order
@{
    ViewData["Title"] = $"Замовлення №{Model.Id}";
}

<div class="container py-4">
    <div class="mb-3">
        <a asp-action="Index" class="text-decoration-none">
            <i class="fas fa-arrow-left me-1"></i>Назад до списку
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Замовлення №@Model.Id</h4>
                <span class="text-muted">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary">Інформація про доставку</h6>
                    <p class="mb-1"><strong>Отримувач:</strong> @Model.Delivery?.RecipientName</p>
                    <p class="mb-1"><strong>Телефон:</strong> @Model.Delivery?.RecipientPhone</p>
                    <p class="mb-1"><strong>Спосіб:</strong> @Model.Delivery?.Method</p>
                    @if (!string.IsNullOrEmpty(Model.Delivery?.Address))
                    {
                        <p class="mb-1"><strong>Адреса:</strong> @Model.Delivery.Address</p>
                    }
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary">Оплата</h6>
                    <p class="mb-1"><strong>Спосіб:</strong> @(Model.Payment?.PaymentMethod == PaymentMethod.Card ? "Картка" : "Готівка")</p>
                    <p class="mb-1">
                        <strong>Статус оплати:</strong> 
                        @if(Model.Payment?.Status == PaymentStatus.Success)
                        {
                            <span class="badge bg-success">Оплачено</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Очікує оплати</span>
                        }
                    </p>
                </div>
            </div>

            <h5 class="mb-3">Товари</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Товар</th>
                            <th class="text-center">Кількість</th>
                            <th class="text-end">Ціна</th>
                            <th class="text-end">Сума</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                        {
                                            <img src="@item.Product.ImageUrl" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        <span>@item.Product?.Name</span>
                                    </div>
                                </td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.Price.ToString("N2") ₴</td>
                                <td class="text-end">@((item.Price * item.Quantity).ToString("N2")) ₴</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Доставка:</td>
                            <td class="text-end">@Model.Delivery?.Cost.ToString("N2") ₴</td>
                        </tr>
                        <tr class="table-light">
                            <td colspan="3" class="text-end fw-bold fs-5">Всього до сплати:</td>
                            <td class="text-end fw-bold fs-5 text-primary">@Model.TotalWithDelivery.ToString("N2") ₴</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>